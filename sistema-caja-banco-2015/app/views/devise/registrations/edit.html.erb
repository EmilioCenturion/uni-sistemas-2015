<div class="container white">
    <h2>Editar Usuario</h2><br>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

      <div class="row">
      <div class="field col-md-12 form-group">
        <div class="field col-md-8 form-group required">
          <%= f.label :email, "Correo", :class => 'col-md-3 control-label' %>
          <div class="col-md-9">
            <%= f.email_field :email, autofocus: true, :class =>'form-control' %>
          </div>
        </div>
      </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

      <div class="field col-md-12 form-group">
        <div class="field col-md-8 form-group ">
          <%= f.label :password, "Contrase単a", :class => 'col-md-3 control-label' %> 
          <div class="col-md-9">
            <%= f.password_field :password, autocomplete: "off", :class =>'form-control' %>
            <i>(Dejar en blanco si no desea cambiarlo)</i>
          </div>
        </div>
      </div>
      
      <div class="field col-md-12 form-group">
        <div class="field col-md-8 form-group ">
          <%= f.label :password_confirmation, "Confirmar Contrase単a", :class => 'col-md-3 control-label' %>
          <div class="col-md-9">
            <%= f.password_field :password_confirmation, autocomplete: "off", :class =>'form-control' %>
          </div>
        </div>
      </div>

      <div class="field col-md-12 form-group">
        <div class="field col-md-8 form-group required">
          <%= f.label :current_password, "Contrase単a Actual", :class => 'col-md-3 control-label' %> 
          <div class="col-md-9">
            <%= f.password_field :current_password, autocomplete: "off", :class =>'form-control' %>
            <i>(Introducir contrase単a actual para confirmar los cambios)</i>
          </div>
        </div>
      </div>

        <br>
        <div class="col-md-10">
          <div class="actions">
            <%= f.submit "Guardar", class: 'btn btn-primary'%>
            <%= link_to 'Cancelar',  root_path , class: 'btn btn-primary margen' %>
          </div>
        <% end %>
<% 
=begin%>

      <h3>Cancel my account</h3>

      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

      <%= link_to "Back", :back %>

<% 
=end%>
      </div>
    </div>
  </div>
</div>