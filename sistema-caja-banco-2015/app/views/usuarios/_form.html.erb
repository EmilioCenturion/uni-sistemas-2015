<%= form_for @usuario, validate: true, url: usuarios_path, html: { method: :post } do |f| %>

    <div class="row">

      <div class="field col-md-12 form-group">
        <h3>Informacion Personal</h3>
      </div>
      <br>
      <br>
      <form class="form-horizontal">
        <div class="field col-md-12 form-group">
          <div class="field col-md-4 form-group required">
            <%= f.label :username, "Nombre", :class => 'col-md-3 control-label'%>
            <div class="field col-md-9 form-group">
              <%= f.text_field :username, :maxlength => 35, autofocus: true, :class => 'form-control' %> 
            </div>
          </div>

          <div class="field col-md-4 form-group required">
            <%= f.label :apellido, :class => 'col-md-3 control-label' %>
            <div class="col-md-9">
              <%= f.text_field :apellido, :maxlength => 35, :class => 'form-control' %>
            </div>
          </div>

          <div class="field col-md-4 form-group required">
            <%= f.label :numero_ci, "Documento", :class => 'col-md-4 control-label' %>
            <div class="col-md-8">
              <%= f.text_field :numero_ci, :maxlength => 7, :class => 'form-control' %>
            </div>
          </div>
        </div>

        <div class="field col-md-12 form-group">
          <div class="field col-md-5 form-group required">
            <%= f.label :direccion, :class => 'col-md-3 control-label'%>
            <div class="field col-md-9 form-group">
              <%= f.text_field :direccion, :maxlength => 65, :class => 'form-control' %> 
            </div>
          </div>

          <div class="field col-md-3 form-group required">
            <%= f.label :pai_id,  "Pais", :class => 'col-md-3 control-label' %>
            <div class="col-md-9">
              <%= f.collection_select :pai_id, Pai.all, :id, :nombre, {prompt: "Seleccione un Pais"} , :class => 'btn btn-default'%>
            </div>
          </div>

          <div class="field col-md-4 form-group required">
            <%= f.label :ciudad_id, "Ciudad", :class => 'col-md-4 control-label' %>
            <div class="col-md-6">
              <%= f.collection_select :ciudad_id, Ciudad.all, :id, :nombre, {prompt: "Seleccione una Ciudad"} , :class => 'btn btn-default'%>
            </div>
          </div>
        </div>

        <div class="field col-md-12 form-group">
          <div class="field col-md-4 form-group required">
            <%= f.label :email, "Correo", :class => 'col-md-3 control-label'%>
            <div class="field col-md-9 form-group">
              <%= f.email_field :email, :maxlength => 35, :class => 'form-control' %> 
            </div>
          </div>

          <div class="field col-md-4 form-group required">
            <%= f.label :telefono, :class => 'col-md-3 control-label' %>
            <div class="col-md-7">
              <%= f.text_field :telefono, :maxlength => 12, :class => 'form-control' %>
            </div>
          </div>

          <div class="field col-md-4 form-group required">
            <%= f.label :celular, :class => 'col-md-3 control-label' %>
            <div class="col-md-7">
              <%= f.text_field :celular, :maxlength => 12, :class => 'form-control' %>
            </div>
          </div>
        </div>
        
        <div class="field col-md-12 form-group">
          <h3>Contraseña</h3>
        </div>
        
        <div class="field col-md-12 form-group">
          <div class="field col-md-6 form-group required">
            <%= f.label :password, "Contraseña", :class => 'col-md-4 control-label'%>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
            <div class="field col-md-8 form-group">
              <%= f.password_field :password, :maxlength => 50, autocomplete: "off", :class => 'form-control' %>
            </div>
          </div>
        </div>
        <div class="field col-md-12 form-group">
          <div class="field col-md-6 form-group required">
            <%= f.label :password_confirmation, "Confirmar Contraseña", :class => 'col-md-4 control-label' %>
            <div class="col-md-8">
              <%= f.password_field :password_confirmation, :maxlength => 65, autocomplete: "off", :class => 'form-control' %>
            </div>
          </div>
        </div>

        <div class="field col-md-12 form-group">
            <h3>Seleccionar Roles</h3>
          </div>
          
          <div class="field col-md-12 form-group">
          <div class="col-md-12">
            <div class="field col-md-3 form-group required">
              <h4>Banco</h4>
              <% for i in 1..4 %>
              <% role = User::ROLES[i] %>
                <%= check_box_tag  "user[roles][#{role}]", role, @usuario.roles.include?(role), {:name => "user[roles][]"}%>
                <%= label_tag "user_roles_#{role}", role.to_s.humanize %><br />
              <% end %>
              <% role = User::ROLES[24] %>
                <%= check_box_tag  "user[roles][#{role}]", role, @usuario.roles.include?(role), {:name => "user[roles][]"}%>
                <%= label_tag "user_roles_#{role}", role.to_s.humanize %><br />
            </div>

            <div class="field col-md-3 form-group required">
              <h4>Caja</h4>
              <% for i in 5..7 %>
              <% role = User::ROLES[i] %>
                <%= check_box_tag  "user[roles][#{role}]", role, @usuario.roles.include?(role), {:name => "user[roles][]"}%>
                <%= label_tag "user_roles_#{role}", role.to_s.humanize %><br />
              <% end %>
            </div>

            <div class="field col-md-3 form-group required">
              <h4>Cuenta</h4>
              <% for i in 9..12 %>
              <% role = User::ROLES[i] %>
                <%= check_box_tag  "user[roles][#{role}]", role, @usuario.roles.include?(role), {:name => "user[roles][]"}%>
                <%= label_tag "user_roles_#{role}", role.to_s.humanize %><br />
              <% end %>
            </div>

            <div class="field col-md-3 form-group required">
              <h4>Tarjeta</h4>
              <% for i in 13..16 %>
              <% role = User::ROLES[i] %>
                <%= check_box_tag  "user[roles][#{role}]", role, @usuario.roles.include?(role), {:name => "user[roles][]"}%>
                <%= label_tag "user_roles_#{role}", role.to_s.humanize %><br />
              <% end %>
            </div>
            </div>
              
             <div class="col-md-12"> 
            <div class="field col-md-3 form-group required">
              <h4>Chequera</h4>
              <% for i in 17..20 %>
              <% role = User::ROLES[i] %>
                <%= check_box_tag  "user[roles][#{role}]", role, @usuario.roles.include?(role), {:name => "user[roles][]"}%>
                <%= label_tag "user_roles_#{role}", role.to_s.humanize %><br />
              <% end %>
            </div>

            <div class="field col-md-3 form-group required">
              <h4>Movimiento Banco</h4>
              <% for i in 21..22 %>
              <% role = User::ROLES[i] %>
                <%= check_box_tag  "user[roles][#{role}]", role, @usuario.roles.include?(role), {:name => "user[roles][]"}%>
                <%= label_tag "user_roles_#{role}", role.to_s.humanize %><br />
              <% end %>
            </div>

            <div class="field col-md-3 form-group required">
              <h4>Auditoria</h4>
              <% role = User::ROLES[23] %>
                <%= check_box_tag  "user[roles][#{role}]", role, @usuario.roles.include?(role), {:name => "user[roles][]"}%>
                <%= label_tag "user_roles_#{role}", role.to_s.humanize %><br />
            </div>

            
          </div>
          <%= hidden_field_tag "user[roles][]", "" %>
        </div>

    <div class="col-md-10">
      <div class="actions">
        <%= f.submit "Agregar", :class => 'btn btn-primary margen'%>
        <%= link_to 'Cancelar',  usuarios_path , class: 'btn btn-primary margen' %>
      </div>
    </div>
    <% end %>
  </div>
</form>