<h1>Listing cajas</h1>

<table>
  <thead>
    <tr>
      <th>Nro caja</th>
      <th>Saldo inicial efectivo</th>
      <th>Saldo inicial cheque</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cajas.each do |caja| %>
      <tr>
        <td><%= caja.nro_caja %></td>
        <td><%= caja.saldo_inicial_efectivo %></td>
        <td><%= caja.saldo_inicial_cheque %></td>
        <td><%= caja.estado %></td>
        <td><%= link_to 'Show', caja %></td>
        <td><%= link_to 'Edit', edit_caja_path(caja) %></td>
        <td><%= link_to 'Destroy', caja, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

