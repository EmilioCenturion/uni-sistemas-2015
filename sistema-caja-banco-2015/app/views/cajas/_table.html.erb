<div class="col-sm-12 col-md-12">
    <table id="table" class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Nro de caja</th>
          <th>Saldo en efectivo</th>
          <th>Saldo en cheque</th>
          <th>Total</th>
          <th>Accion</th>
        </tr>
      </thead>

      <tbody>
        <% @cajas.each do |caja| %>
          <tr>
            <td><%= caja.nro_caja %></td>
            <td><%= caja.saldo_inicial_efectivo %></td>
            <td><%= caja.saldo_inicial_cheque %></td>
            <td><%= caja.saldo_inicial_efectivo + caja.saldo_inicial_cheque %></td>
            <td>
                <% if caja.estado == 'Cerrado' %>
                  <%= link_to new_apertura_caja_path, class: 'btn btn-success', title: 'Abrir caja', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                          <span class= "glyphicon glyphicon-home"></span>
                  <% end %>
                <% elsif caja.estado == 'Abierto' %>
                      <button type="button" class="btn btn-default" disabled="disabled"><span class="glyphicon glyphicon-home"></span></button>
                <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>