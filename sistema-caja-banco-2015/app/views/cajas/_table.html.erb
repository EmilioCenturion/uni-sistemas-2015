<div class="col-sm-12 col-md-12">
    <table id="table" class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Nro de caja</th>
          <th>Saldo en efectivo</th>
          <th>Saldo en cheque</th>
          <th>Total</th>
          <th>Estado</th>
        </tr>
      </thead>

      <tbody>
        <% @cajas.each do |caja| %>
          <tr>
            <td><%= caja.nro_caja %></td>
            <td><%= caja.saldo_inicial_efectivo %></td>
            <td><%= caja.saldo_inicial_cheque %></td>
            <td><%= caja.saldo_inicial_efectivo + caja.saldo_inicial_cheque %></td>
            <td><%= caja.estado %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>