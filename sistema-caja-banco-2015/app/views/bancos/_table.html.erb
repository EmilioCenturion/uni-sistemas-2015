      <div class="col-sm-12 col-md-12">
        <table id="table" class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Sucursal</th>
              <th>Direccion</th>
              <th>Telefono</th>
              <th>Correo</th>
              <th>Ciudad</th>
              <th>Pais</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @bancos.each do |banco| %>
              <tr>
                <td><%= banco.nombre %></td>
                <td><%= banco.sucursal %></td>
                <td><%= banco.direccion %></td>
                <td><%= banco.telefono %></td>
                <td><%= banco.correo %></td>
                <% ciudad = banco.ciudad %>
                <td><%= ciudad.name_ciudad  %></td>
                <% pais = banco.pai %>
                <td><%= pais.name_pais  %></td>
                <td class="row">
                  <% if can? :edit, Banco and can? :read, Banco %>
                    <%= link_to edit_banco_path(banco), class: 'btn btn-default', title: 'Editar', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                    <span class= "glyphicon glyphicon-pencil"></span>
                    <% end %>
                  <% end %>
                  <% if can? :destroy, Banco and can? :read, Banco %>
                    <%= link_to banco, method: :delete, data: { confirm: 'Esta seguro que desea eliminar este registro?' }, class: 'btn btn-default', title: 'Eliminar', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                    <span class= "glyphicon glyphicon-trash"></span>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>
      </div>
   