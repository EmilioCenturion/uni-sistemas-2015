<div class="container">
<h1>Bancos</h1>
<div id="formularioUno">
  <%= render 'form' %>
</div><br>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bancos.each do |banco| %>
      <tr>
        <td><%= banco.nombre %></td>
        <td><%= banco.direccion %></td>
        <td><%= banco.telefono %></td>
        <td><%= link_to edit_banco_path(banco), class: 'btn btn-default', title: 'Editar', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
        <span class="glyphicon glyphicon-pencil"></span>
        <% end %>
        <%= link_to banco, method: :delete, data: { confirm: 'Va eliminarlo, esta seguro?' }, class: 'btn btn-default', title: 'Borrar', 'data-toggle' => 'tooltip', 'data-placement' => 'right'  do %>
          <span class="glyphicon glyphicon-trash"></span>
        <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>

