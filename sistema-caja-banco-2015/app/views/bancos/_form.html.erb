<%= form_for @banco, validate: true do |f| %>
  <% if @banco.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@banco.errors.count, "error") %> prohibited this banco from being saved:</h2>

      <ul>
      <% @banco.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="row">
    <form class="form-horizontal">
    <div class="field col-md-12 form-group">
      <div class="field col-md-6 form-group required">
        <%= f.label :nombre, :class => 'col-md-2 control-label'%>
        <div class="col-md-7">
          <%= f.text_field :nombre , autofocus:true , :class => 'form-control'%>
        </div>
      </div>

      <div class="field col-md-6 form-group required">
        <%= f.label :sucursal, :class => 'col-md-2 control-label'%>
        <div class="col-md-7">
          <%= f.text_field :sucursal, :class => 'form-control'%>
        </div>
      </div>
    </div>

    <div class="field col-md-12 form-group">
      <div class="field col-md-6 form-group required">
        <%= f.label :direccion, :class => 'col-md-2 control-label' %>
        <div class="col-md-10">
          <%= f.text_field :direccion , :class => 'form-control' %>
        </div>
      </div>

      <div  class="col-md-6 form-group required">
        <%= f.label :pais , :class => 'col-md-2 control-label'%>
        <%= link_to "#modal-pais", "data-toggle" => "modal" , class: 'btn btn-primary' do %>
              <span class="glyphicon glyphicon-plus"></span>
            <% end %>
            <div  class="col-md-6">
              <select id="pais_ingreso" name="banco[pai_id]" class="btn btn-default">
                 <% @pais.each do |pai| %>
                    <%= render partial: "pais/coleccion", locals: {pai: pai} %>
  
                <% end %>
              </select>
          
          </div>
      </div>
    </div>

    <div class="field col-md-12 form-group">
      <div class="field col-md-6 form-group required">
        <%= f.label :correo, :class => 'col-md-2 control-label' %>
        <div class="col-md-7">
          <%= f.text_field :correo , :class => 'form-control'%>
        </div>
      </div>

      <div class="field col-md-6 form-group required">
        <%= f.label :ciudad , :class => 'col-md-2 control-label'%>
        <%= link_to "#modal-ciudad", "data-toggle" => "modal" , class: 'btn btn-primary' do %>
              <span class="glyphicon glyphicon-plus"></span>
            <% end %>
        <div class="col-md-6">
          <%= f.collection_select :ciudad_id, Ciudad.all, :id, :name_ciudad, {prompt: "Seleccione una ciudad"} ,:class => 'btn btn-default'%>
            
        </div>
      </div>
    </div>

    <div class="field col-md-12 form-group">
      <div class="field col-md-6 form-group required">
        <%= f.label :telefono, :class => 'col-md-2 control-label' %>
        <div class="col-md-7">
          <%= f.text_field :telefono , :class => 'form-control'%>
        </div>
      </div>
    </div>

      <div class="col-md-10">
        <div class="actions">
          <% if controller.action_name == 'new' or controller.action_name == 'index' %>
            <%= f.submit "Agregar", :class => 'btn btn-primary margen'%>
            <% elsif controller.action_name == 'edit' %>
            <%= f.submit "Guardar", :class => 'btn btn-primary margen'%>
          <% end %>
          
          <%= link_to 'Cancelar',  bancos_path , class: 'btn btn-primary' %>
        </div>
      </div>
     </form> 
  </div>
<% end %>

<%
=begin %>
<%= render 'bancos/modals/pais' %>
<%= render 'bancos/modals/ciudad' %>
<%
=end %>


<%# Bootstrap modal markup. @see: http://getbootstrap.com/javascript/#modals %>
<div class="modal fade" id="modal-pais" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Create new person</h4>
      </div>
      <div class="modal-body">
        <%# Render the new person form (passing modal => true to enable remote => true) %>
        <%= render 'pais/formulario', modal: true %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


