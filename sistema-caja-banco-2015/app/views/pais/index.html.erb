<div class="container white">
<h1>Lista de Paises</h1>

      <div class="col-md-12">
        <table id="table" class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Nombre</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @pais.each do |pais| %>
              <tr>
                <td><%= pais.nombre %></td>
                <td class="row">
                  <%= link_to edit_pai_path(pais), class: 'btn btn-default', title: 'Editar', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                  <span class= "glyphicon glyphicon-pencil"></span>
                  <% end %>
                  <%= link_to pais, method: :delete, data: { confirm: 'Esta seguro que desea eliminar este registro?' }, class: 'btn btn-default', title: 'Eliminar', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
                  <span class= "glyphicon glyphicon-trash"></span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>
      </div>

      <%= link_to 'Inicio', root_path, class: 'btn btn-primary'%>
      <%= link_to 'Atras', bancos_path, class: 'btn btn-primary' %>
      
      <br>
      <br>
</div>


