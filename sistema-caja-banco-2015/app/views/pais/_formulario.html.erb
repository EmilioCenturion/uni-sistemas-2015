<% modal ||= false %>
<% remote = modal ? true : false %>

<%= form_for(@pai, remote: remote, html: {role: :form, 'data-model' => 'pai'}) do |f| %>

  <div class="row">
    <form class="form-horizontal">
    <div class="field col-md-12 form-group">
      <div class="field col-md-12 form-group required">
        <%= f.label :nombre, :class => 'col-md-2 control-label'%>
        <div class="col-md-7">
          <%= f.text_field :nombre , autofocus:true , :class => 'form-control'%>
        </div>
      </div>
    </div>

   <div class="col-md-10">
        <div class="actions">
            <%= f.submit "Agregar", :class => 'btn btn-primary margen'%>

          <button type="button" class="btn btn-primary" data-dismiss="modal">Cancelar</button>

        </div>
      </div>
  </form>
  </div>
<% end %>
