<div class="container white">
  <%= render 'solapa' %>
  <h1>Caja Nro. <%=@apertura_caja.caja.nro_caja%> <%= link_to new_apertura_caja_path, class: 'btn btn-primary', title: 'Nueva apertura', 'data-toggle' => 'tooltip', 'data-placement' => 'rigth' do %>
        <span class= "glyphicon glyphicon-plus"></span>
      <% end %>
  </h1>
  <div class="row">
    <form class="form-horizontal">
      <div class="field col-md-1 form-group">  
      </div>
      <div class="field col-md-11 form-group">
        <div class="field col-md-5 form-group">
            <strong>Cajero/a: </strong>
            <%= current_user.username %>
        </div>
        <div class="field col-md-5 form-group">
            <strong>Apertura: </strong>
            <%= @apertura_caja.apertura %>
        </div>

        <div class="field col-md-5 form-group">
            <strong>Saldo inicial efectivo: </strong>
            <%= @apertura_caja.saldo_inicial_efectivo %>
        </div>
        <div class="field col-md-5 form-group">
            <strong>Saldo final efectivo: </strong>
            <%= @apertura_caja.saldo_final_efectivo %>
        </div>

        <div class="field col-md-5 form-group">
            <strong>Saldo inicial cheque: </strong>
            <%= @apertura_caja.saldo_inicial_cheque %>
        </div>
        <div class="field col-md-5 form-group">
            <strong>Saldo final cheque: </strong>
            <%= @apertura_caja.saldo_final_cheque %>
        </div>
        <% AperturaCaja.update(@apertura_caja.id, :user_id => current_user.id) %>
        
        <div class="field col-md-10 form-group">
          <% if @apertura_caja.saldo_final_cheque < 0 or @apertura_caja.saldo_final_efectivo < 0 %>
            <button class="btn btn-primary" disabled="disabled" title="No se puede cerrar una caja con saldos negativos">Cerrar caja</button>
          <% elsif @apertura_caja.cierre.nil? == false %>
            <strong>Estado: </strong>
            <%= 'Caja Cerrada' %>
          <% else %>
            <%= link_to 'Cerrar caja', edit_apertura_caja_path(@apertura_caja), :class => 'btn btn-primary', data: { confirm: 'Esta seguro que desea cerrar la caja?' }%>
          <%end%>
        </div>
      </div>
    </form>
  </div>
</div>
<br>
<div class="container white">
  <br>
  <%= render 'table' %>
</div>